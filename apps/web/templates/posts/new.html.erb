<h2>Add Post</h2>

<% unless params.valid? %>
  <div class='errors'>
    <h3>There was a problem with your submission</h3>
    <ul>
      <% params.error_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%=
  form_for :post, routes.posts_path do
    div class: 'input' do
      label      :title
      text_field :title
    end

    div class: 'input' do
      label      :body
      text_field :body
    end

    div class: 'controls' do
      submit 'Create Post'
    end
  end
%>
